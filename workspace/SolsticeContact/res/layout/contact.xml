<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <RelativeLayout
     android:id="@+id/genBlock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="2dp"
    android:padding="2dp" >
	    <ImageView
	        android:id="@+id/ContactImage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_margin="5dp"
	        android:src="@drawable/ic_launcher" />
	
	    <TextView
	        android:id="@+id/Name1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/ContactImage"
	        android:layout_margin="5dp"
	        android:text="name" />
	
	    <TextView
	        android:id="@+id/company"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/ContactImage"
	        android:layout_below="@+id/Name1"
	        android:layout_margin="5dp"
	        android:text="company" />

	    <ImageView
	        android:id="@+id/favoirte"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:visibility="invisible"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/golden_star" />

	</RelativeLayout>
	<RelativeLayout
	android:id="@+id/phoneBlock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="2dp"
    android:background="#ffffff"
    android:layout_below="@+id/genBlock" >
	    <TextView
	        android:id="@+id/phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:text="Phone Numbers:" />
	    <TextView
	        android:id="@+id/home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/phone"
	        android:text="home:"/>
	    <TextView
	        android:id="@+id/homeP"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/phone"
	        android:layout_toRightOf="@+id/home"
	        android:text="homeP"/>
	    <TextView
	        android:id="@+id/work"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/home"
	        android:text="work:"/>
	    <TextView
	        android:id="@+id/workP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/homeP"
	        android:layout_toRightOf="@+id/work"
	        android:text="workP"/>
	    <TextView
	        android:id="@+id/mobile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/work"
	        android:text="mobile:"/>
	    <TextView
	        android:id="@+id/mobileP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/workP"
	        android:layout_toRightOf="@+id/mobile"
	        android:text="mobileP"/>
	</RelativeLayout>
	
	<RelativeLayout
	android:id="@+id/addressBlock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="2dp"
    android:background="#ffffff"
    android:layout_below="@+id/phoneBlock" >
	    
	     <TextView
	        android:id="@+id/address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:text="Address:" />
	     <RelativeLayout
			android:id="@+id/subAddressBlock"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:layout_marginLeft="15dp"
		    android:background="#ffffff"
			android:layout_below="@+id/address" >
		     <TextView
		        android:id="@+id/street"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="street"/>
		     <TextView
		        android:id="@+id/city"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/street"
		        android:text="city"/>
		     <TextView
		        android:id="@+id/state"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/street"
		        android:layout_toRightOf="@+id/city"
		        android:text="state"/>
		     <TextView
		        android:id="@+id/country"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/city"
		        android:text="country"/>
		     <TextView
		        android:id="@+id/zip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/street"
		        android:layout_toRightOf="@+id/state"
		        android:text="zip"/>
	     </RelativeLayout>
	     <TextView
	        android:id="@+id/blank"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/subAddressBlock"
	        android:text="" />
	  </RelativeLayout>
	  <RelativeLayout
		android:id="@+id/birthdayBlock"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_margin="2dp"
	    android:background="#ffffff"
	    android:layout_below="@+id/addressBlock" >
	     <TextView
		    android:id="@+id/birthdayTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:text="Birthday:"/>
	     <TextView
		    android:id="@+id/birthday"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_below="@+id/birthdayTitle"
		    android:text="birthday"/>
	     <TextView
	        android:id="@+id/blank"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/birthday"
	        android:text="" />
	     
	  </RelativeLayout>
	  <RelativeLayout
		android:id="@+id/emailBlock"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_margin="2dp"
	    android:background="#ffffff"
	    android:layout_below="@+id/birthdayBlock" >
	  	<TextView
		    android:id="@+id/emailTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:text="Email:"/>
	     <TextView
		    android:id="@+id/email"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_below="@+id/emailTitle"
		    android:text="email"/>
	     <TextView
	        android:id="@+id/blank"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/email"
	        android:text="" />
	  </RelativeLayout>
	  <RelativeLayout
		android:id="@+id/webBlock"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_margin="2dp"
	    android:background="#ffffff"
	    android:layout_below="@+id/emailBlock" >
	     <TextView
		    android:id="@+id/webTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:text="Website:"/>
	     <TextView
		    android:id="@+id/web"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_below="@+id/webTitle"
		    android:text="web"/>
	     <TextView
	        android:id="@+id/blank"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/web"
	        android:text="" />
	  </RelativeLayout>

</RelativeLayout>
</ScrollView>